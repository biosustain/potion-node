{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "importHelpers": true,
        "declaration": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strict": true,
        "sourceMap": true,
        // TODO: Remove skipLibCheck when Angular gets fixed
        "skipLibCheck": true,
        "inlineSources": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    }
}
